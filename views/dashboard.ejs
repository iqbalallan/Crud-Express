<!DOCTYPE html>
<html>
  <head>
    <title>Admin Dashboard</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <style>
      .dashboard-container {
        max-width: 800px;
        margin: 0 auto;
        margin-top: 50px;
      }
      .dashboard-container h2 {
        margin-bottom: 20px;
      }
      .dashboard-container .news-table {
        width: 100%;
        border-collapse: collapse;
      }
      .dashboard-container .news-table th,
      .dashboard-container .news-table td {
        padding: 10px;
        border: 1px solid #ddd;
      }
      .dashboard-container .news-table th {
        background-color: #f2f2f2;
        font-weight: bold;
      }
      .dashboard-container .logout-button {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="dashboard-container">
        <h2>Selamat Datang, <%= admin.username %>!</h2>
        <a href="/admin/add" class="btn btn-primary mb-3">Tambah Berita</a>
        <table class="news-table">
          <thead>
            <tr>
              <th>Judul</th>
              <th>Author</th>
              <th>created_at</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% news.forEach(function(newsItem) { %>
            <tr>
              <td><%= newsItem.title %></td>
              <td><%= newsItem.author %></td>
              <td><%= newsItem.created_at %></td>
              <td>
                <a
                  href="/admin/edit/<%= newsItem.id %>"
                  class="btn btn-sm btn-primary"
                  >Edit</a
                >
                <a
                  href="/admin/delete/<%= newsItem.id %>"
                  class="btn btn-sm btn-danger"
                  >Delete</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <form action="/admin/logout" method="POST">
          <button type="submit" class="btn btn-primary logout-button">
            Logout
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
